    <script>
        const appConfig = {
            "welcome": {
                "message": "Bienvenue dans l'espace d'√©tude √©pist√©mique.",
                "warning": "‚ö†Ô∏è S'ABSTENIR IMP√âRATIVEMENT de toute requ√™te hors sp√©cialit√©. Cet agent est exclusivement programm√© pour les sciences de l'Islam. Toute autre th√©matique sera rejet√©e."
            },
            "form": {
                "header": "Posez votre question",
                "placeholder": "Ex: La m√©thodologie de l'Imam Malik..."
            },
            "domaines": ["Tafsir", "Fiqh", "Akida", "Hadith", "Histoire", "√âthique"],
            "disclaimer": {
                "title": "Avis de non-responsabilit√©",
                "content": "Cette IA est un outil de recherche. Elle ne remplace pas l'avis d'un savant qualifi√© ('Alim)."
            },
            "monetization": {
                "description": "Soutenez le d√©veloppement de cet agent.",
                "thanks": "Merci pour votre g√©n√©rosit√©.",
                "credits": "Propuls√© par AIgooglestudio ¬© 2026"
            }
        };

        // --- FONCTION DE NETTOYAGE DES SYMBOLES (# et *) ---
        function cleanText(text) {
            return text
                .replace(/[#]/g, '') // Supprime tous les di√®ses
                .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>') // Transforme **texte** en gras
                .replace(/\*(.*?)\*/g, '<em>$1</em>') // Transforme *texte* en italique
                .trim();
        }

        // --- EXEMPLE D'UTILISATION LORS DU RENDU ---
        // Cette fonction sera appel√©e quand vous recevrez la r√©ponse de l'IA
        function displayResponse(rawText) {
            const displayZone = document.getElementById('response-area');
            displayZone.innerHTML = cleanText(rawText);
            displayZone.style.display = 'block';
        }

        document.addEventListener('DOMContentLoaded', () => {
            const cfg = appConfig;
            document.getElementById('welcome-text').innerText = cfg.welcome.message;
            document.getElementById('warning-msg').innerText = cfg.welcome.warning;
            document.getElementById('form-header').innerText = cfg.form.header;
            document.getElementById('user_question').placeholder = cfg.form.placeholder;
            document.getElementById('disclaimer-title').innerText = cfg.disclaimer.title;
            document.getElementById('disclaimer-text').innerText = cfg.disclaimer.content;
            document.getElementById('monetization-text').innerText = cfg.monetization.description;
            document.getElementById('thanks-msg').innerText = cfg.monetization.thanks;
            document.getElementById('credits').innerText = cfg.monetization.credits;

            const list = document.getElementById('themes-list');
            cfg.domaines.forEach(d => {
                const s = document.createElement('span'); s.className = 'theme-tag';
                s.innerText = d; list.appendChild(s);
            });
        });

        function ouvrirProfil() { document.getElementById('modalProfil').style.display = "block"; }
        function fermerProfil() { document.getElementById('modalProfil').style.display = "none"; }
        
        function preparerDonation() {
            const amount = prompt("Montant du don (CFA) :", "1000");
            if (amount && !isNaN(amount)) {
                CinetPay.setConfig({ apikey: 'VOTRE_API_KEY', site_id: 'VOTRE_SITE_ID', notify_url: 'https://votre-site.com/notify/' });
                CinetPay.getCheckout({
                    transaction_id: Math.floor(Math.random() * 100000000).toString(),
                    amount: parseInt(amount), currency: 'XOF', channels: 'ALL',
                    description: 'Don - M√©moire √âpist√©mique',
                    customer_name: "Donateur", customer_surname: "Anonyme",
                    customer_email: "contact@aigooglestudio.com", customer_phone_number: "00000000",
                    customer_address: "Web", customer_city: "Abidjan",
                    customer_country: "CI", customer_state: "CI", customer_zip_code: "00225"
                });
            }
        }
    </script>
