            font-size: 0.75rem; color: #666; line-height: 1.5;
            text-align: justify; margin-bottom: 20px;
        }

        .action-container {
            padding: 20px; background: var(--white);
            border-radius: 20px; box-shadow: 0 -5px 20px rgba(0,0,0,0.03);
            display: flex; flex-direction: column; gap: 10px;
            margin-top: auto;
        }

        .btn-don, .btn-profil {
            width: 100%; padding: 16px; border-radius: 50px;
            font-weight: bold; cursor: pointer; font-size: 1rem;
            transition: all 0.3s ease; border: none;
        }

        .btn-don {
            background: linear-gradient(135deg, var(--primary), var(--accent));
            color: var(--white);
        }

        .btn-profil {
            background: var(--white); color: var(--primary);
            border: 2px solid var(--primary);
        }

        /* MODALE PROFIL */
        .modal {
            display: none; position: fixed; z-index: 2000;
            left: 0; top: 0; width: 100%; height: 100%;
            background-color: rgba(0,0,0,0.6); backdrop-filter: blur(3px);
        }

        .modal-content {
            background-color: var(--white); margin: 15% auto;
            padding: 30px; border-radius: 25px; width: 85%;
            max-width: 400px; position: relative;
            text-align: center;
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        }

        .close-btn { position: absolute; right: 20px; top: 15px; font-size: 24px; cursor: pointer; color: #999; }

        .avatar-circle {
            width: 70px; height: 70px; background: var(--gold);
            border-radius: 50%; margin: 0 auto 15px;
            display: flex; align-items: center; justify-content: center;
            font-size: 1.5rem; color: white; font-weight: bold;
        }

        footer { text-align: center; font-size: 0.8rem; color: #999; padding: 20px 0; }
    </style>
</head>
<body>

    <div class="app-container">
